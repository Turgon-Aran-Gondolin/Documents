\begin_body

\begin_layout Standard
Origin:
\begin_inset Formula 
\[
W_{a}^{\mu\nu}=\frac{1}{4N_{c}}\int d\hat{p}^{+}\delta\left(\left(\hat{p}+q\right)^{2}\right)\int\frac{d^{4}k}{\left(2\pi\right)^{4}}\frac{-i}{k^{2}+i\epsilon}Tr\left[\gamma^{\mu}\gamma\cdot\left(\hat{p}+q\right)\left(-ig_{s}\gamma^{\rho}T^{a}\right)\frac{i\left(\gamma\cdot\left(\hat{p}+q\right)-\gamma^{-}k^{+}\right)}{\left(\hat{p}+q\right)^{2}-2\left(\hat{p}+q\right)^{-}k^{+}+i\epsilon}\gamma^{\nu}\frac{i\gamma\cdot\left(\hat{p}-k\right)}{\left(\hat{p}-k\right)^{2}+i\epsilon}\left(-ig_{s}\gamma_{\rho}T^{a}\right)\gamma^{-}\right]f_{q/p}\left(z\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Result: 
\begin_inset Formula 
\[
W_{a}^{\mu\nu}=\frac{1}{4N_{c}}\int d\hat{p}^{+}\delta\left(\left(\hat{p}+q\right)^{2}\right)Tr\left[\gamma^{\mu}\gamma\cdot\left(\hat{p}+q\right)\gamma^{\nu}\gamma^{-}\right]\int\frac{d^{4}k}{\left(2\pi\right)^{4}}\frac{-i}{k^{2}+i\epsilon}Tr\left[\gamma^{+}\frac{i\gamma\cdot\left(\hat{p}-k\right)}{\left(\hat{p}-k\right)^{2}+i\epsilon}\left(-ig_{s}\gamma^{\rho}T^{a}\right)\gamma^{-}\frac{i}{-k^{+}+i\epsilon}\left(-ig_{s}\gamma_{\rho}T^{a}\right)\right]f_{q/p}\left(z\right)
\]

\end_inset


\end_layout

\begin_layout Standard
Gamma origin: 
\begin_inset Formula 
\[
Tr\left[\gamma^{\mu}\gamma\cdot\left(\hat{p}+q\right)\gamma^{\rho}\gamma\cdot\left(\hat{p}+q-k\right)\gamma^{\nu}\gamma\cdot\left(\hat{p}-k\right)\gamma_{\rho}\gamma^{-}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Result:
\begin_inset Formula 
\[
Tr\left[\gamma^{\mu}\gamma\cdot\left(\hat{p}+q\right)\gamma^{\nu}\gamma^{-}\right]Tr\left[\gamma^{+}\gamma\cdot\left(\hat{p}-k\right)\gamma^{\rho}\gamma^{-}\gamma_{\rho}\right]
\]

\end_inset


\end_layout

\begin_layout Subsubsection*
Prove:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
q^{\mu}=\left(q^{+},q^{-},0,0\right),k^{\mu}=\left(k^{+},0,0,0\right)
\]

\end_inset


\begin_inset Formula 
\[
\gamma^{+}\gamma^{+}=\gamma^{-}\gamma^{-}=0
\]

\end_inset


\begin_inset Formula 
\[
\hat{p}^{+}+q^{+}=0
\]

\end_inset


\begin_inset Formula 
\begin{align*}
 & Tr\left[\gamma^{\mu}\gamma\cdot\left(\hat{p}+q\right)\gamma^{\rho}\gamma\cdot\left(\hat{p}+q-k\right)\gamma^{\nu}\gamma\cdot\left(\hat{p}-k\right)\gamma_{\rho}\gamma^{-}\right]\\
= & Tr\left[\gamma^{\mu}\gamma\cdot\left(\hat{p}+q\right)\gamma^{\rho}\left(\gamma^{+}q^{-}-\gamma^{-}k^{+}\right)\gamma^{\nu}\gamma\cdot\left(\hat{p}-k\right)\gamma_{\rho}\gamma^{-}\right]
\end{align*}

\end_inset


\begin_inset Formula 
\[
\gamma\cdot\left(\hat{p}+q\right)=\gamma^{+}q^{-}
\]

\end_inset


\begin_inset Formula 
\[
\gamma\cdot\left(\hat{p}-k\right)=\gamma^{-}p^{+}-\gamma^{-}k^{+}-\gamma^{+}k^{-}-\gamma^{\perp}k_{\perp}
\]

\end_inset


\begin_inset Formula $\rho$
\end_inset

 cannot be +, from 
\begin_inset Formula $\gamma_{\rho}\gamma^{-}$
\end_inset

 it cannot be -, so it can only be 
\begin_inset Formula $\perp$
\end_inset

.
 And 
\begin_inset Formula $\gamma\cdot\left(\hat{p}-k\right)$
\end_inset

 cannot contain -.
 
\begin_inset Formula 
\[
\left\{ \gamma^{+},\gamma_{\perp}\right\} =2\delta_{\perp}^{+}=0
\]

\end_inset


\begin_inset Formula 
\[
\gamma^{+}\gamma^{-}\gamma^{+}=2\gamma^{+}
\]

\end_inset

With these relations
\begin_inset Formula 
\[
\gamma^{\rho}\left(\gamma^{+}q^{-}-\gamma^{-}k^{+}\right)\gamma^{\nu}\gamma\cdot\left(\hat{p}-k\right)\gamma_{\rho}\gamma^{-}=\left(-1\right)^{2}\left(\gamma^{+}q^{-}-\gamma^{-}k^{+}\right)\gamma^{\rho}\gamma^{\nu}\gamma\cdot\left(\hat{p}-k\right)\gamma^{-}\gamma_{\rho}
\]

\end_inset


\end_layout

